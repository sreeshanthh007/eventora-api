# ====================== #
# üöÄ SERVER CONFIGURATION #
# ====================== #

# Port number your backend server will run on
PORT=your_port_here

# Allowed origin for CORS (usually your frontend URL)
CORS_ALLOWED_ORIGIN=your_frontend_url_here

# Node environment (e.g., development, production)
NODE_DEV=your_node_environment_here



# ======================= #
# üõ¢Ô∏è DATABASE CONFIGURATION #
# ======================= #

# MongoDB connection URI
DATABASE_URI=your_mongodb_connection_uri_here



# ====================== #
# üîê BCRYPT CONFIGURATION #
# ====================== #

# Number of salt rounds used for password hashing
BCRYPT_SALT_ROUNDS=your_bcrypt_salt_rounds_here



# ========================== #
# üìß NODEMAILER CONFIGURATION #
# ========================== #

# Mail server port (usually 587 for TLS)
MAIL_PORT=your_mail_port_here

# Email SMTP host (e.g., smtp.gmail.com)
EMAIL_HOST=your_email_host_here

# Email address used to send OTPs
EMAIL_USER=your_email_address_here

# App password or mailer password (DO NOT commit actual value)
EMAIL_PASS=your_email_password_here

# From name and address shown in emails
EMAIL_FROM=your_from_name_and_email_here

# OTP expiry time in minutes
OTP_EXPIRY_IN_MINUTES=your_otp_expiry_here



# =================== #
# üîë JWT CONFIGURATION #
# =================== #

# JWT secret key
JWT_SECRET_KEY=your_jwt_secret_here

# Access token expiry time (e.g., 15m, 1h)
ACCESS_EXPIRES_IN=your_access_token_expiry_here

# Refresh token expiry time (e.g., 7d)
REFRESH_EXPIRES_IN=your_refresh_token_expiry_here



# =================== #
# üöÄ REDIS CONFIGURATION #
# =================== #


REDIS_USERNAME=your_redis_username_here

# Redis cloud password
REDIS_PASSWORD=your_redis_password_here

# Redis port
REDIS_PORT=your_redis_port_here

# Redis host
REDIS_HOST=your_redis_host_here



