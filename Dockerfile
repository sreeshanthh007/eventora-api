
FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./


RUN npm install


COPY . .


RUN npm run build



FROM node:20-alpine AS production

WORKDIR /app


COPY package*.json ./


RUN npm install --omit=dev

COPY --from=builder /app/dist ./dist

EXPOSE 3000

CMD ["node", "dist/app.js"]
